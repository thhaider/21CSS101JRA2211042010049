#include<stdio.h>
 
int main()
{
    int radius;
    float PI=3.14,area,ci;
 
    printf(" Enter the Radius of Circle: ");
    scanf("%d",&radius);
 
    area = PI * radius * radius;
    printf("\n Area of a Circle : %f ",area);
 
    ci = 2 * PI * radius;
    printf("\n Circumference of a Circle is : %f ",ci);
 
    return(0);
}
